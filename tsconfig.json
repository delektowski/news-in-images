{
    "compilerOptions": {
        "target": "es2022",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
